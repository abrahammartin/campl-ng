extends ../base.jade

import ./sidebar/related_links

block body
	header
		include ./header/global/header.jade
		include ./header/local/header.jade
		div.local-header.subtitle
			div.container
				div(class=page.side_menu ? "col-md-9 col-md-offset-3" : "col-md-12")
					div.p-a
						h1= page.title
	main.container
		div.row
			include ../navigation/vertical_menu.jade
			div.col-xs-12.main-content(class="col-md-#{page.side_menu ? 6:9}")
				if image
					div.image-wrapper.image-wrapper-leading
					img(src=image)
				block unwrapped_content
				div.p-a
					block content
			div.col-md-3.col-xs-12.sidebar
				div.p-a
					block sidebar_content
	footer
		include ./footer/local/footer.jade
		include ./footer/global/footer.jade
